.container {  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  padding: 30px;  
}  
  
.userinfo {  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  margin-bottom: 20px;  
}  
  
.userinfo-avatar {  
  width: 128px;  
  height: 128px;  
  border-radius: 50%;  
}  
  
.userinfo-nickname {  
  margin-top: 10px;  
  font-size: 20px;  
  color: #333;  
}  
  
.user-info-section {  
  display: flex;  
  flex-direction: column;  
  width: 100%;  
}  
  
.user-info-item {  
  display: flex;  
  justify-content: space-between;  
  align-items: center;  
  margin-bottom: 10px;  
}  
  
.label {  
  color: #666;  
}