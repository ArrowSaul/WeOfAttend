.container {  
  padding: 20px;  
}  
  
.form-item {  
  margin-bottom: 15px;  
  display: flex;  
  align-items: center;  
}  
  
.label {  
  width: 100px;  
  margin-right: 10px;  
  text-align: right;  
}  
  
input {  
  flex: 1;  
  padding: 8px;  
  border: 1px solid #ddd;  
  border-radius: 4px;  
}  
  
.avatar {  
  width: 60px;  
  height: 60px;  
  border-radius: 50%;  
}  
  
button {  
  width: 100%;  
  background-color: #007aff;  
  color: white;  
  padding: 10px;  
  border-radius: 4px;  
  border: none;  
  margin-top: 20px;  
}