      <view class="text1">学院：</view>
      <input type="text" class="weui-input" name="college" placeholder="请输入学院" bindblur="validatePhoneNumber" />
    </view>
    <view wx:if="{{ phoneError }}" style="color: red;flex: 3;text-align: center;">{{phoneError}}</view>
    <!-- 专业输入区域 -->
