      <input type="text" class="weui-input" name="major" placeholder="请输入专业" bindblur="validatePhoneNumber" />
    </view>
    <view wx:if="{{ phoneError }}" style="color: red;flex: 3;text-align: center;">{{phoneError}}</view>
    <!-- 隐私协议勾选区域 -->
